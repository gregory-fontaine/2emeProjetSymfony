{% extends 'base.html.twig' %}

{% block title %}Nouveau professeur{% endblock %}

{% block body %}
    
    <h1 class="text-center m-4">Nouveau professeur</h1>

    {# form de base #}
    {# {{ include('utilisateur/_form.html.twig') }}
    <a href="{{ path('app_utilisateur_index') }}">Retour à la liste</a> #}


    {# formulaire personalisé #}
    {{ form_start(form) }}

  <div class="d-flex justify-content-around m-4">
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.nom_utilisateur) }}</div>
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.prenom_utilisateur) }}</div>
  </div>

  <div class="d-flex justify-content-around m-4 mt-5">
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.email) }}</div>
    
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.telephone_utilisateur) }}</div>
  </div>

  <div class="d-flex justify-content-around m-4 mt-5">
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.plainPassword.first) }}</div>
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.plainPassword.second) }}</div>
    {# <div class="w-25 card1 m-2 p-2">{{ form_row(form.prenom_utilisateur) }}</div> #}
  </div>

  <div class="d-flex justify-content-around m-4 mt-5">
    <div class="w-25 card1 m-2 p-2">{{ form_row(form.sexe_utilisateur) }}</div>
    <div class="w-25 card1 d-flex justify-content-center align-item-center m-2 p-2"><button type="submit" class="btn btn-lg btn-primary m-2">Créer cours</button></div>
  </div>
    {{ form_end(form)}}


{% endblock %}
