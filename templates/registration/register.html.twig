{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="d-flex m-0 row">
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
		<div class="d-flex justify-content-center p-0">
			<h1>Inscription</h1>
		</div>
		{# formulaire insciption #}
		<div class="p-0">
			{{ form_start(registrationForm) }}


			<div class="d-flex justify-content-around my-4">
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.nom_utilisateur) }}</div>
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.prenom_utilisateur) }}</div>
			</div>

			<div class="d-flex justify-content-around my-4 mt-4">
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.email) }}</div>
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.telephone_utilisateur) }}</div>
			</div>

			<div class="d-flex justify-content-around my-4 mt-4">
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.plainPassword.first) }}</div>
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.plainPassword.second) }}</div>
			</div>

			<div class="d-flex justify-content-around my-4 mt-4">
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.sexe_utilisateur) }}</div>
				<div class="w-25 card1 my-2 p-2">{{ form_row(registrationForm.color) }}</div>
				
			</div>

			<div class="d-flex justify-content-around my-4 mt-4"><div class="w-25 card1 d-flex justify-content-center align-item-center my-2 p-2">
					<button type="submit" class="btn btn-lg btn-primary my-2">Cr√©er un utilisateur</button>
				</div>
			</div>

			<div class="d-flex justify-content-center mt-4">
				{{ form_row(registrationForm.agreeTerms) }}
			</div>
			{{ form_end(registrationForm)}}
		</div>
	</div>


{% endblock %}
