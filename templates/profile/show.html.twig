{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}


	<div class="d-flex justify-content-center text-center row px-5  mx-1">
		<h1 class="text-center my-5">Bonjour
			{{ utilisateur.prenomUtilisateur }}
		</h1>

		<div class="d-flex justify-content-center">
			<table class="table table-dark table-striped">
				<tbody>

					<tr>
						<th>Email</th>
						<td>{{ utilisateur.email }}</td>
					</tr>

					<tr>
						<th>Nom_utilisateur</th>
						<td>{{ utilisateur.nomUtilisateur }}</td>
					</tr>
					<tr>
						<th>Prenom_utilisateur</th>
						<td>{{ utilisateur.prenomUtilisateur }}</td>
					</tr>
					<tr>
						<th>Telephone_utilisateur</th>
						<td>{{ utilisateur.telephoneUtilisateur }}</td>
					</tr>
					<tr>
						<th>Sexe_utilisateur</th>
						<td>{{ utilisateur.sexeUtilisateur }}</td>
					</tr>

				</tbody>
			</table>
		</div>
	</div>
	<div class="d-flex justify-content-around">
		<div class="w-25 d-flex justify-content-center order-3 mt-3">
			<a class="btn btn-primary mt-2" href="{{ path('app_profile_edit') }}">Modifier</a>
		</div>
		<div class="w-25 order-2"></div>
		<div class="w-25 order-1"></div>
	</div>
{% endblock %}
