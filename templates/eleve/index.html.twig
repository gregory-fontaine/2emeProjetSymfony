{% extends 'base.html.twig' %}

{% block title %}
	Liste des élèves


{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center text-center row px-5 mx-1">
	<h1 class="mt-3">Liste des élèves</h1>
    </div>
    <div class="p-5">
	<table class="table table-striped table-dark" id="dataTable">
		<thead>
			<tr>
				<th class="bg-primary">ID</th>
				<th class="bg-primary">Nom de l'élève</th>
				<th class="bg-primary">Prénom de l'élève</th>
				<th class="bg-primary">Email</th>
				<th class="bg-primary">Téléphone</th>
				<th class="bg-primary">Sexe</th>
				<th class="bg-primary">Niveau d'étude</th>
				<th class="bg-primary">Dernier métier exercé</th>
				<th class="bg-primary">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for eleve in eleves %}
				<tr>
					<td>{{ eleve.id }}</td>
					<td> {{ eleve.nomEleve }}</td>
					<td>{{ eleve.prenomEleve }}</td>
					<td>{{ eleve.emailEleve }}</td>
					<td>{{ eleve.telephoneEleve }}</td>
					<td>{{ eleve.sexeEleve }}</td>
					<td>{{ eleve.niveauEtude }}</td>
					<td>{{ eleve.metierExerce }}</td>
					<td>
						<a href="{{ path('app_eleve_show', {'id': eleve.id}) }}"><button type="button" class="btn btn-sm btn-outline-primary">Voir</button></a>
						<a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}"><button type="button" class="btn btn-sm btn-primary">Modifier</button></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Pas d'élèves enregistrés</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
    </div>
    <div class="d-flex justify-content-around">
    <div class="w-25 d-flex justify-content-center order-3 mt-3">
        <a class="btn btn-primary mt-2" href="{{ path('app_eleve_new') }}">Créer</a> 
    </div>
<div class="w-25 order-2"></div>
<div class="w-25 order-1"></div>
</div>
{% endblock %}