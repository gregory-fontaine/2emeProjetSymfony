{% extends 'base.html.twig' %}

{% block title %}
    Eleve
    
{% endblock %}

{% block body %}
    <h1>
        Détails de l'élève
            
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>
                    Id
                                    
                </th>
                <td>
                    {{ eleve.id }}
                </td>
            </tr>
            <tr>
                <th>
                    Nom de l'élève
                                    
                </th>
                <td>
                    {{ eleve.nomEleve }}
                </td>
            </tr>
            <tr>
                <th>
                    Prénom de l'élève
                                    
                </th>
                <td>
                    {{ eleve.prenomEleve }}
                </td>
            </tr>
            <tr>
                <th>
                    Email
                                    
                </th>
                <td>
                    {{ eleve.emailEleve }}
                </td>
            </tr>
            <tr>
                <th>
                    Téléphone
                                    
                </th>
                <td>
                    {{ eleve.telephoneEleve }}
                </td>
            </tr>
            <tr>
                <th>
                    Sexe
                                    
                </th>
                <td>
                    {{ eleve.sexeEleve }}
                </td>
            </tr>
            <tr>
                <th>
                    Niveau d'étude
                                    
                </th>
                <td>
                    {{ eleve.niveauEtude }}
                </td>
            </tr>
            <tr>
                <th>
                    Dernier métier exercé
                                    
                </th>
                <td>
                    {{ eleve.metierExerce }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_eleve_index') }}">
        <button type="button" class="btn btn-primary">
            Retour
                    
        </button>
    </a>

    <a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}">
        <button type="button" class="btn btn-primary">
            Modifier
        </button>
    </a>

    {{ include('eleve/_delete_form.html.twig') }}
{% endblock %}
