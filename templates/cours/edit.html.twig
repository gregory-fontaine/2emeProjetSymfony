{% extends 'base.html.twig' %}

{% block title %}
	Modifier un cours
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center text-center row px-5  mx-1">
	<h1 class="text-center mt-5">Modifier un cours</h1>

	{# {{ include('cours/_form.html.twig', {'button_label': 'Modifier'}) }} #}


	{{ form_start(editCoursForm) }}


	{# premiere ligne #}
	<div class="d-flex justify-content-around m-5 mt-5">
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.max_eleves) }}</div>
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.description) }}</div>
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.libelle) }}</div>
	</div>

	{# deuxieme ligne #}
	<div class="d-flex justify-content-around m-5">
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.date_debut) }}</div>
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.heure_debut) }}</div>
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.date_hebdomadaire) }}</div>
	</div>

	{# 3eme ligne #}
	<div class="d-flex justify-content-around m-5">
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.date_fin) }}</div>
		<div class="w-25 card1 m-2 p-2">{{ form_row(editCoursForm.heure_fin) }}</div>
		{% if is_granted('ROLE_ADMIN')  %}
			<div class="w-25 card1 bg-custom-1 m-2 p-2">{{ form_row(editCoursForm.utilisateur) }}</div>
		{% endif %}
		
		
	</div>

	{# ligne avec boutons retour valider supprimer #}
	<div class="d-flex justify-content-around">
		<div class="w-25 d-flex justify-content-center order-3">{{ include('cours/_formEdit.html.twig', { button_label: 'Modifier' }) }}</div>
		<div class="w-25 d-flex justify-content-center order-2">{{ include('cours/_delete_form.html.twig') }}</div>
		<div class="w-25 d-flex justify-content-center order-1">
			<a class="btn btn-outline-primary mt-2" href="{{ path('app_cours_index') }}">Retour Ã  la liste</a>
		</div>
	</div>
	</div>
	{{ form_end(editCoursForm) }}
{% endblock %}
