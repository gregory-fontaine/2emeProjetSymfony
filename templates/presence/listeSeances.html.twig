{% extends 'base.html.twig' %}

{% block title %}Seances du cours{% endblock %}

{% block body %}
<div class="d-flex justify-content-center text-center row px-5  mx-1">
		<h1 class="mt-3">Séances du cours</h1>
		<div class="p-5">
    

    <table class="table table-striped table-dark" id="dataTable">
        <thead>
            <tr>
                <th class="bg-primary">libelle</th>                
                <th class="bg-primary">date</th>
                <th class="bg-primary">heure du début</th>
                <th class="bg-primary">heure de fin</th>
                <th class="bg-primary">actions</th>                
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.libelle }}</td>               
                <td>{{ seance.date|date('d-m-Y')}}</td>
                <td>{{ seance.heureDebut|date('H:i')}}</td> 
                <td>{{ seance.heureFin|date('H:i')}}</td>  
                
                  <td>
                    <a class="btn btn-sm btn-outline-primary m-1" href="{{ path('app_seances/presences_list', {'id': seance.id}) }}">Voir</a>                    
                </td> 
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'inscription à ce cours enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="w-25 d-flex justify-content-center order-2">
        <a class="btn btn-outline-primary mt-2" href="{{ path('app_presence_index') }}">Retour à la liste des cours</a>
    </div>

  </div>
</div>  

    {# <a href="{{ path('app_presence_new') }}">Create new</a> #}
{% endblock %}


