{% extends 'base.html.twig' %}

{% block title %}Presence de la seance{% endblock %}

{% block body %}
<div class="d-flex justify-content-center text-center row px-5  mx-1">
        {% for presence in presences %}
		<h1 class="mt-3">Presences de la séance du {{ presence.DateSeance|date('d-m-Y') }}</h1>
        {% endfor %}
		<div class="p-5">
    

    <table class="table table-striped table-dark" id="dataTable">
        <thead>
            <tr>
                <th class="bg-primary">Nom et Prénom</th> 
                <th class="bg-primary">statut</th>             
                <th class="bg-primary">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presence in presences %}
            <tr>
                <td>{{presence.coursNomEleve}} {{presence.coursPrenomEleve}}</td>
                <td>
                    {% if presence.validationPresence  == 1 %}
                        présent
                    {% elseif presence.validationPresence  == 2 %}
                        absence justifiée
                    {% else %}
                        absent 
                    {% endif %}
                    
                    </td>              
                <td>
                    {# <a class="btn btn-sm btn-outline-primary m-1" href="{{ path('app_presence_show', {'id': presence.id}) }}">Voir</a> #}
                    <a class="btn btn-sm btn-outline-primary m-1" href="{{ path('app_presence_edit', {'id': presence.id}) }}">Modifier</a> 
                </td>  
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'inscription à ce cours enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  </div>
</div>  

<div class="w-25 d-flex justify-content-center order-2">
        <a class="btn btn-outline-primary mt-2" href="{{ path('app_presence_index') }}">Retour à la liste des cours</a>
    </div>

    
{% endblock %}
