{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="text-center mt-5">
    <h1>Réinitialiser le mot de passe</h1>
    </div>

    <div class="d-flex justify-content-center mt-3">
            <small>
                Entrez votre adresse mail et nous vous enverrons un lien de réinitialisation
            </small>
        </div>
    {{ form_start(requestForm) }}
    <div  class="d-flex justify-content-center mt-3">{{ form_row(requestForm.email) }}</div>
<div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary">Envoyer le mail</button>
        <div>
    {{ form_end(requestForm) }}
{% endblock %}
