{% extends 'base.html.twig' %}

{% block title %}Modifier l'élève inscrit
{% endblock %}

{% block body %}

	{# titre #}
	<div class="d-flex justify-content-center text-center row px-5 mx-1">
		<h1 class="mt-3">Modifier l'élève inscrit</h1>
	</div>

	{# formulaire #}
	<div class="mx-3">
		<p class="mx-2">Actuellement
			{{ inscrit.coursPrenomEleve }}
			{{ inscrit.coursNomEleve }}
		</p>
		<div class="d-flex mx-2">
			{{ include('inscrit/_form.html.twig', {'button_label': 'Modifier'}) }}
		</div>

		{# Bouton de retour #}
		<div class="mt-5 d-flex ">
			<a class="btn btn-primary mt-2 mx-2" href="{{ path('app_inscrit_index') }}">Retour à la liste des cours</a>

            {{ include('inscrit/_delete_form.html.twig') }}
		</div>

		
	</div>
{% endblock %}
