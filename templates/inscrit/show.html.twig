{% extends 'base.html.twig' %}

{% block title %}Inscrit{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center text-center row px-5  mx-1">
    <h1 class="mt-3">Cours de {{ inscrit.coursLibelle }}</h1>
    <div class="p-5">
        <table class="table table-striped table-dark">
            <tbody>
                <tr>
                    <th class="w-50" style="padding-left: 150px;">Id</div></th>
                    <td class="w-50" style="padding-left: 150px;">{{ inscrit.id }}</td>
                </tr>
                <tr>
                    <th class="w-50" style="padding-left: 150px;">Libelle du cours</div></th>
                    <td class="w-50" style="padding-left: 150px;">{{ inscrit.coursLibelle }}</td>
                </tr>
                <tr>
                    <th class="w-50" style="padding-left: 150px;">Nom et prénom</div></th>
                    <td class="w-50" style="padding-left: 150px;"> {{ inscrit.coursNomEleve }} {{ inscrit.coursPrenomEleve }} </td>
                </tr>                
            </tbody>
        </table>
    </div>
    </div>
    <div class="d-flex justify-content-around">
        <div class="w-25 d-flex justify-content-center order-3">
            <a class="btn btn-primary mt-2" href="{{ path('app_inscrit_edit', {'id': inscrit.id}) }}">Modifier l'élève inscrit</a>
        </div>
    <div class="w-25 d-flex justify-content-center order-2">
        <a class="btn btn-outline-primary mt-2" href="{{ path('app_inscrit_index') }}">Retour à la liste des cours</a>
        </div>    
        
        <div class="w-25 d-flex justify-content-center order-2">
            {{ include('inscrit/_delete_form.html.twig') }}
        </div>
        </div>    
{% endblock %}
